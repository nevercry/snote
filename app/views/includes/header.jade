.container
  .row
    .page-header
      h1= title
.navbar.navbar-default.navbar-fixed-bottom
  .container
    .navbar-header
      a.navbar-brand(href="/") Snote
    if user
      p.navbar-text.navbar-right
        span 欢迎您,#{user.name}
        span &nbsp;|&nbsp;
        a.navbar-link(href="/logout") 登出
    else    
      p.navbar-text.navbar-right
        a.navbar-link(href="#", data-toggle="modal", data-target="#signupModal") 注册
        span &nbsp;|&nbsp;
        a.navbar-link(href="#", data-toggle="modal", data-target="#loginModal") 登录
#signupModal.modal.fade
  .modal-dialog
    .modal-content
      form(method="POST", action="/user/signup")
        .modal-header 注册
        .modal-body 
          .form-group
            label(for="signupName") 用户名
            input#signupName.form-control(name="user[name]", type="text", placeholder="用户名")
          .form-group
            label(for="signupPassword") 密码
            input#signupPassword.form-control(name="user[password]", type="password", placeholder="密码")
        .modal-footer
          button.btn.btn-default(type="button", data-dismiss="modal") 关闭
          button.btn.btn-sucess(type="submit") 提交
#loginModal.modal.fade
  .modal-dialog
    .modal-content
      form(method="POST", action="/user/login")
        .modal-header 登录
        .modal-body 
          .form-group
            label(for="loginName") 用户名
            input#loginName.form-control(name="user[name]", type="text", placeholder="用户名")
          .form-group
            label(for="loginPassword") 密码
            input#loginPassword.form-control(name="user[password]", type="password", placeholder="密码")
        .modal-footer
          button.btn.btn-default(type="button", data-dismiss="modal") 关闭
          button.btn.btn-sucess(type="submit") 登录
